{
  "name": "up-snap",
  "version": "0.0.3",
  "license": "Apache 2.0",
  "author": "johnz",
  "main": "dist/bundle.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/bundle.js",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "yarn build:tx && yarn build:snap",
    "rebuild": "yarn build:tx && yarn build:snap && yarn test:snap",
    "start:dev": "mm-snap serve",
    "build:snap": "rm -rf build && mm-snap build",
    "build:tx": "rm -rf dist && tsdx build",
    "test": "tsdx test"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@metamask/snaps-cli": "^0.20.0",
    "@size-limit/preset-small-lib": "^8.0.1",
    "husky": "^8.0.1",
    "size-limit": "^8.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "@metamask/key-tree": "^4.0.0",
    "@metamask/key-tree-old": "npm:@metamask/key-tree@^3.0.1",
    "@metamask/snap-types": "^0.20.0",
    "ethers": "^5.7.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
